                        android:src="@drawable/icon_bookmark_border" />
                </LinearLayout>

                <TextView
                    android:id="@+id/insta_like_counter_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginBottom="10dp"
                    android:text="0 like"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/insta_1_my_story_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/acc_circle_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User_One"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Uzbekistan Namangan"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/insta_1_post_3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/png_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/insta_1_favorite3_id"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/icon_favorite_border" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/chat" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/icon_send" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/bookmark_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_bookmark_border" />
                </LinearLayout>

                <TextView
                    android:id="@+id/insta_like_counter_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginBottom="10dp"
                    android:text="0 like"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <!--        <GridView-->
                <!--            android:id="@+id/insta_1_gridview"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="match_parent" />-->

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

